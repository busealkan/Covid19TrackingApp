<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.busealkan.covid19">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Covid19App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Covid19"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.busealkan.covid19.ui.statistics.history.HistoryActivity"
            android:label="@string/historyLabel">
        </activity>
        <activity
            android:name="com.busealkan.covid19.ui.statistics.detail.DetailActivity"
            android:label="@string/detailLabel"
            />
        <activity
            android:name="com.busealkan.covid19.ui.statistics.statistics.StatisticsActivity"
            android:label="@string/app_name"
            />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>